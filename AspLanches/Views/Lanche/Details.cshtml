@model Lanche

<div class="container">
    <div class="row">
        <div class="card">
            <div class="text-center">
                <img src="@Model.ImagemUrl" class="img-fluid" alt="@Model.Nome - Img">
            </div>
            <div class="card-body text-center" >
                <h5><a class="card-title" style="text-decoration: none;" asp-controller="Lanche" asp-action="Details" asp-route-lancheId="@Model.LancheId">@Model.Nome</a></h5>
                <p></p>
                <h6 class="card-subtitle mb-2 text-muted">R$ @Model.Preco</h6>
                <p class="card-text">@Model.DescricaoDetalhada</p>
                <div class="btn-group">
                    <a class="btn btn-outline-info me-3" asp-controller="Lanche"
                       asp-action="List">
                        Ver todos os lanches
                    </a>
                    <a class="btn btn-primary" asp-controller="CarrinhoCompra"
                       asp-action="AdicionarItemNoCarrinhoCompra" asp-route-lancheId="@Model.LancheId">
                        Adicionar @Model.Nome ao carrinho
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>