@model ReflectionIT.Mvc.Paging.PagingList<AspLanches.Models.Lanche>

@{
    ViewData["Title"] = "Index";
}

<h1>Lanches</h1>

<form method="get" class="form-inline">
    <div class="row">
        <div class="form-group col-md-11">
            <input name="filter" class="form-control" placeholder="Filtro" value="@Model.RouteValue["Filter"]" />
        </div>
        <div class="form-group col-md-1">
            <button type="submit" class="btn btn-primary">
                Procurar
            </button>
        </div>
    </div>
</form>

Total de Lanches: @Model.TotalRecordCount
<div>
    <vc:pager paging-list="@Model"></vc:pager>
</div>


<a asp-action="Create" class="btn btn-success">Criar Lanche</a>

<div class="row">
    <div class="col-md-10">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DescricaoCurta)
                    </th>                    
                    <th>
                        @Html.DisplayNameFor(model => model.Preco)
                    </th>                    
                    <th>
                        @Html.DisplayNameFor(model => model.IsLanchePreferido)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmEstoque)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Categoria)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DescricaoCurta)
                        </td>                        
                        <td>
                            @Html.DisplayFor(modelItem => item.Preco)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsLanchePreferido)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmEstoque)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Categoria.CategoriaNome)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.LancheId">Editar</a> |
                            <a asp-action="Details" asp-route-id="@item.LancheId">Detalhes</a> |
                            <a asp-action="Delete" asp-route-id="@item.LancheId">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
