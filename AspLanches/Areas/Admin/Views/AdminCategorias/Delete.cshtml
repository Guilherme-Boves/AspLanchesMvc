@model AspLanches.Models.Categoria

@{
    ViewData["Title"] = "Delete";
}

<h1>Você tem certeza que deseja deletar a categoria: @Model.CategoriaNome?</h1>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoriaNome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoriaNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoriaId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-outline-info" asp-action="Index">Retornar</a>
    </form>
</div>
